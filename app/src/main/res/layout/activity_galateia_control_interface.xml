<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GalateiaControlInterface"
    android:id="@+id/galateiaImage">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Controle pelo Acelerometro"
        android:id="@+id/controlTypeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/turnLefButton"
        android:layout_toStartOf="@+id/turnLefButton" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/backwardsButton"
        android:src="@drawable/backwards"
        android:scaleType="fitCenter"
        android:layout_above="@+id/controlTypeButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/turnLefButton"
        android:src="@drawable/turnleft"
        android:scaleType="fitCenter"
        android:layout_above="@+id/backwardsButton"
        android:layout_toLeftOf="@+id/backwardsButton"
        android:layout_toStartOf="@+id/backwardsButton" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/turnRightButton"
        android:src="@drawable/turntright"
        android:scaleType="fitCenter"
        android:layout_above="@+id/backwardsButton"
        android:layout_toRightOf="@+id/backwardsButton"
        android:layout_toEndOf="@+id/backwardsButton" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/forwardButton"
        android:src="@drawable/front"
        android:scaleType="fitCenter"
        android:layout_above="@+id/turnLefButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/stopButton"
        android:src="@drawable/stopsign"
        android:scaleType="fitCenter"
        android:layout_above="@+id/backwardsButton"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/galaeteia"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/turnLefButton"
        android:layout_toStartOf="@+id/turnLefButton"
        android:layout_alignRight="@+id/controlTypeButton"
        android:layout_alignEnd="@+id/controlTypeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:id="@+id/connectButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
